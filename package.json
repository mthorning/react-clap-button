    "react": "^16",
    "react-dom": "^16",
    "react-feather": "latest",
    "size-limit": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "storybook-addon-jsx": "latest"
  },
  "scripts": {
    "build": "NODE_ENV=production BABEL_ENV=production babel src -d lib",
